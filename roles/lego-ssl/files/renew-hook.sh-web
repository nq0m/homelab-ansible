#!/bin/bash

/usr/bin/cp /srv/certs/.lego/certificates/web.colo.test-net.work.pem /srv/certs/
/usr/bin/chown 99.99 /srv/certs/web.colo.test-net.work.pem

# Restart haproxy container to put new certs live

/usr/bin/podman container kill --signal HUP web_haproxy_1

# Same with nginx container

/usr/bin/podman container kill --signal HUP web_nginx_1